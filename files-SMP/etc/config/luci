
config core 'main'
	option lang 'auto'
	option mediaurlbase '/luci-static/bootstrap'
	option resourcebase '/luci-static/resources'
	option pollinterval '20'

config extern 'flash_keep'
	option uci '/etc/config/'
	option dropbear '/etc/dropbear/'
	option openvpn '/etc/openvpn/'
	option passwd '/etc/passwd'
	option opkg '/etc/opkg.conf'
	option firewall '/etc/firewall.user'
	option uploads '/lib/uci/upload/'

config internal 'languages'
	option pl 'Polski (Polish)'
	option en 'English'
	option de 'Deutsch (German)'

config internal 'sauth'
	option sessionpath '/tmp/luci-sessions'
	option sessiontime '360'

config internal 'ccache'
	option enable '0'

config internal 'themes'
	option Bootstrap '/luci-static/bootstrap'
	option BootstrapDark '/luci-static/bootstrap-dark'
	option BootstrapLight '/luci-static/bootstrap-light'

config internal 'apply'
	option holdoff '4'
	option timeout '5'
	option display '1.5'
	option rollback '60'

config internal 'diag'
	option dns 'openwrt.org'
	option ping 'openwrt.org'
	option route 'openwrt.org'

config command
	option name 'temp CPU'
	option command '/etc/temp'

config command
	option name 'WiFi On'
	option command '/etc/wifi-on'

config command
	option name 'WiFi Off'
	option command '/etc/wifi-off'

config command
	option name 'WiFi default'
	option command '/etc/wifi-default'

config command
	option name 'LED On'
	option command '/etc/red-led-on'

config command
	option name 'LED Off'
	option command '/etc/red-led-off'

config command
	option name 'LCD Black'
	option command '/etc/lcd-black'

config command
	option name 'LCD White'
	option command '/etc/lcd-white'

config command
	option name 'LCD On'
	option command '/etc/lcd-on'

config command
	option name 'LCD Off'
	option command '/etc/lcd-off'

config command
	option name 'ARP table'
	option command 'cat /proc/net/arp'

config command
	option name 'receive SMS'
	option command '/etc/odbierz-sms'

config command
	option name 'delete all SMS messages'
	option command '/etc/skasuj-smsy'

config command
	option name 'Hilink start'
	option command 'ifup hilink'

config command
	option name 'Hilink stop'
	option command 'ifdown hilink && ifup wan'

